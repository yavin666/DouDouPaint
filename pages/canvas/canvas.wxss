/* pages/canvas/canvas.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between; /* 改为space-between使画布和工具栏分别位于顶部和底部 */
  height: 100vh;
  background-color: #333;
  overflow: hidden; /* 防止内容溢出导致滚动 */
  position: relative; /* 确保子元素可以相对于它定位 */
  box-sizing: border-box;
  padding: 0;
}

.main-canvas {
  border: 2rpx solid #cccccc;
  background-color: #FFFFFF;
  margin: 0;
  display: block;
  touch-action: none;
  width: 750rpx; /* 使用 rpx 单位，自动适配不同屏幕 */
  height: calc(100vh - 380rpx); /* 减去工具栏高度 */
  flex: 1;
}

/* 透明背景时显示深色棋盘格 */
.main-canvas.transparent-bg {
  background-image:
    linear-gradient(45deg, #666666 25%, transparent 25%),
    linear-gradient(-45deg, #666666 25%, transparent 25%),
    linear-gradient(45deg, transparent 75%, #666666 75%),
    linear-gradient(-45deg, transparent 75%, #666666 75%);
  background-size: 20px 20px;
  background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
  background-color: #444444;
}

.toolbar {
  width: 100%;
  height: 380rpx; /* 增加高度以适应透明背景开关 */
  background-color: #444;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 16rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
  flex-shrink: 0;
}

.pen-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 8px;
}

.pen-button {
  padding: 4px 8px;
  border-radius: 4px;
  background-color: #555;
  color: #ffffff;
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
  font-size: 12px;
}

.pen-button.active {
  background-color: #007AFF;
  color: #ffffff;
}

/* 画笔大小选择区域 */
.brush-size-buttons {
  width: 100%;
  margin-bottom: 8px;
}

.section-title {
  color: #ffffff;
  font-size: 12px;
  text-align: center;
  display: block;
  margin-bottom: 5px;
}

.size-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.size-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 4px 8px;
  border-radius: 4px;
  background-color: #555;
  color: #ffffff;
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
  min-width: 50px;
}

.size-button.active {
  background-color: #007AFF;
}

.size-button text {
  font-size: 10px;
  margin-top: 2px;
}

/* 画笔大小预览圆点 */
.size-preview {
  background-color: #ffffff;
  border-radius: 50%;
  margin-bottom: 2px;
}

.size-small {
  width: 6px;
  height: 6px;
}

.size-medium {
  width: 10px;
  height: 10px;
}

.size-large {
  width: 14px;
  height: 14px;
}

/* 透明背景开关区域 */
.background-toggle {
  width: 100%;
  margin-bottom: 8px;
}

.toggle-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
}

.toggle-label {
  color: #ffffff;
  font-size: 12px;
}

.toggle-hint {
  color: #39C5BB;
  font-size: 10px;
  min-width: 30px;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

button {
  padding: 4px 8px;
  border-radius: 4px;
  background-color: #007AFF;
  color: #ffffff;
  border: none;
  font-size: 12px;
  margin: 0 3px;
  min-width: 60px;
}

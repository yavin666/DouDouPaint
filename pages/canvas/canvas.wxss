/* pages/canvas/canvas.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between; /* 改为space-between使画布和工具栏分别位于顶部和底部 */
  height: 100vh;
  background-color: #333;
  overflow: hidden; /* 防止内容溢出导致滚动 */
  position: relative; /* 确保子元素可以相对于它定位 */
  box-sizing: border-box;
  padding: 0;
}

canvas {
  border: 1px solid #cccccc;
  background-color: #FFFFFF;
  margin: 0;
  display: block; /* 确保canvas正确显示 */
  touch-action: none; /* 禁止默认触摸行为 */
  width: 100% !important; /* 确保宽度填满容器 */
  flex: 1; /* 让画布占据剩余空间 */
}

.toolbar {
  width: 100%;
  height: 160px; /* 增加高度以容纳画笔大小控件 */
  background-color: #444;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 8px;
  box-sizing: border-box;
  position: relative; /* 确保工具栏正确定位 */
  z-index: 10; /* 确保工具栏在画布上方 */
  flex-shrink: 0; /* 防止工具栏被压缩 */
}

.pen-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 8px;
}

.pen-button {
  padding: 4px 8px;
  border-radius: 4px;
  background-color: #555;
  color: #ffffff;
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
  font-size: 12px;
}

.pen-button.active {
  background-color: #007AFF;
  color: #ffffff;
}

/* 画笔大小选择区域 */
.brush-size-buttons {
  width: 100%;
  margin-bottom: 8px;
}

.section-title {
  color: #ffffff;
  font-size: 12px;
  text-align: center;
  display: block;
  margin-bottom: 5px;
}

.size-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.size-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 4px 8px;
  border-radius: 4px;
  background-color: #555;
  color: #ffffff;
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
  min-width: 50px;
}

.size-button.active {
  background-color: #007AFF;
}

.size-button text {
  font-size: 10px;
  margin-top: 2px;
}

/* 画笔大小预览圆点 */
.size-preview {
  background-color: #ffffff;
  border-radius: 50%;
  margin-bottom: 2px;
}

.size-small {
  width: 6px;
  height: 6px;
}

.size-medium {
  width: 10px;
  height: 10px;
}

.size-large {
  width: 14px;
  height: 14px;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

button {
  padding: 4px 8px;
  border-radius: 4px;
  background-color: #007AFF;
  color: #ffffff;
  border: none;
  font-size: 12px;
  margin: 0 3px;
  min-width: 60px;
}
